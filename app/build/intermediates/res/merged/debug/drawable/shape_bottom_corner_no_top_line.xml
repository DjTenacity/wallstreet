<?xml version="1.0" encoding="utf-8"?>  
<!-- 底部圆角 白色背景 灰色边框 长方体 -->  
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">  

    <item android:top="0dp" android:bottom="0dp" android:left="0dp" android:right="0dp">
        <shape>  
            <solid android:color="#FFFFFF" />  
            <corners android:topLeftRadius="0.1dp" android:topRightRadius="0.1dp"  
                android:bottomRightRadius="4dp" android:bottomLeftRadius="4dp" />
            <stroke android:width="1dp" android:color="#aaaaaaaa" />
        </shape>  
    </item>  
</layer-list>  