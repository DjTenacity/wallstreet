<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:gravity="center_horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                            android:gravity="bottom|center_horizontal">
                    <ImageView android:layout_width="278dp"
                               android:layout_height="wrap_content"
                               android:background="@drawable/upgrade_popup_title"/>
                </LinearLayout>
                <LinearLayout android:layout_width="278dp"
                              android:layout_height="wrap_content"
                              android:gravity="left|center_vertical"
                              android:paddingLeft="20dp"
                              android:paddingRight="20dp"
                              android:background="@drawable/upgrade_popup_back">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textSize="14sp"
                              android:lineSpacingMultiplier="0.9"
                              android:textColor="#999999"
                              android:id="@+id/alert_msg"/>
                </LinearLayout>

                <LinearLayout android:layout_width="278dp"
                              android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <Button android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:id="@+id/alert_cancel_btn"
                                    style="@style/update_btn_style_left"/>
                            <Button android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:id="@+id/alert_sure_btn"
                                    style="@style/update_btn_style_right"/>
                </LinearLayout>
</LinearLayout>