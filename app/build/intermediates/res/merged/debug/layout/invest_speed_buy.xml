<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="5dp"
                  android:layout_marginRight="5dp"
                  android:paddingTop="40dp"
                  android:background="@drawable/speed_buy"
                  android:orientation="horizontal">
        <LinearLayout android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1.2"
                      android:orientation="vertical">
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                        android:minHeight="20dp">
                <TextView android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:textSize="12sp"
                          android:id="@+id/cycle"
                          android:gravity="right|bottom"
                          android:textColor="#e8ff827f"/>
            </LinearLayout>
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="0dp"
                          android:layout_weight="2"

                          >
                <LinearLayout android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:gravity="bottom|center_horizontal"
                            android:orientation="horizontal">
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:id="@+id/sec_rate_integer"
                                  android:textSize="45sp"
                                  android:includeFontPadding="false"
                                  android:gravity="bottom|center_horizontal"
                                  android:layout_marginTop="0dp"
                                  android:textColor="#e8ff827f"/>
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:id="@+id/sec_rate_decimal"
                                  android:textSize="35sp"
                                  android:includeFontPadding="false"
                                  android:gravity="bottom|center_horizontal"
                                  android:layout_marginTop="0dp"
                                  android:textColor="#e8ff827f"/>
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:textColor="#e8ff827f"
                                  android:textSize="25sp"
                                  android:padding="0dp"
                                  android:includeFontPadding="false"
                                  android:text="%"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <View android:layout_width="1dip"
              android:layout_height="50dp"
              android:layout_marginLeft="2dp"

              android:background="@drawable/jyx"/>
        <LinearLayout android:layout_width="0dp"
                      android:layout_height="fill_parent"
                      android:layout_weight="2"
                      android:orientation="vertical"
                >
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="0dp"
                          android:layout_weight="1"
                          android:orientation="horizontal">
                <TextView android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:text="剩余金额"
                          android:textSize="12sp"
                          android:id="@+id/explan_text"
                          android:gravity="bottom"
                          android:paddingLeft="32dp"
                          android:textColor="@color/title"/>
                <LinearLayout android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:gravity="bottom|center_horizontal"
                            android:orientation="horizontal">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:id="@+id/project_amount"
                              android:textSize="12sp"
                              android:textColor="@color/title"/>
                    <!--<TextView android:layout_width="wrap_content"-->
                              <!--android:layout_height="wrap_content"-->
                              <!--android:textSize="16sp"-->
                              <!--android:layout_marginLeft="2dp"-->
                              <!--android:text="元"-->
                              <!--android:textColor="#c1c1c1"/>-->
                </LinearLayout>

            </LinearLayout>
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="0dp"
                          android:orientation="vertical"
                          android:layout_weight="2">

                <ImageView android:layout_width="fill_parent"
                           android:layout_height="wrap_content"
                        android:src="@drawable/split_speed_buy"/>
                <LinearLayout android:layout_width="fill_parent"
                              android:layout_height="fill_parent"
                              android:gravity="center"
                              android:id="@+id/time_count_layout"
                              android:orientation="horizontal">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:background="@drawable/timer_count"
                              android:textSize="20sp"
                              android:text="12"
                              android:gravity="center"
                              android:id="@+id/hour"
                              android:textColor="#e8ff827f"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textSize="20sp"
                              android:text=":"
                              android:layout_marginLeft="10dp"
                              android:layout_marginRight="10dp"
                              android:gravity="center"
                              android:textColor="#e8ff827f"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:background="@drawable/timer_count"
                              android:textSize="20sp"
                              android:text="12"
                              android:gravity="center"
                              android:id="@+id/min"
                              android:textColor="#e8ff827f"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="fill_parent"
                              android:textSize="20sp"
                              android:text=":"
                              android:layout_marginLeft="10dp"
                              android:layout_marginRight="10dp"
                              android:gravity="center"
                              android:textColor="#e8ff827f"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:background="@drawable/timer_count"
                              android:textSize="20sp"
                              android:text="12"
                              android:id="@+id/sec"
                              android:gravity="center"
                              android:textColor="#e8ff827f"/>
                </LinearLayout>
                <LinearLayout android:layout_width="fill_parent"
                              android:layout_height="fill_parent"
                              android:gravity="center"
                              android:visibility="gone"
                              android:padding="5dp"
                              android:id="@+id/countBtnLayout"
                              android:orientation="horizontal">
                        <Button android:layout_width="150dp"
                                android:layout_height="30dp"
                                android:id="@+id/countBtn"
                                android:background="@drawable/countdonwbtn"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <ImageView android:layout_width="90dp"
               android:layout_height="30dp"
               android:layout_alignParentTop="true"
               android:layout_marginLeft="2dp"
               android:layout_marginTop="10dp"
               android:src="@drawable/ms"
            />
</RelativeLayout>