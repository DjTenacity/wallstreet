<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
            android:background="#ffffff">

        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/navigation_bar_layout"
                      android:layout_alignParentTop="true">
            <include layout="@layout/action_bar" android:id="@+id/navigation_bar"/>
        </LinearLayout>
        <ListView android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/navigation_bar_layout"
                  android:layout_margin="2dp"
                android:id="@+id/bank_card_list"/>

        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="105dp"
                    android:orientation="horizontal"
                      android:layout_margin="2dp"
                      android:id="@+id/add_new_bank_card"
                      android:layout_below="@+id/bank_card_list"
                      android:gravity="center"
                      android:background="@drawable/add_bankcard_btn_bg">
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="13dp"
                        android:src="@drawable/add_bankcard_btn_bg_words"/>
        </LinearLayout>
</RelativeLayout>