<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
            android:background="#ffffff">
            <include layout="@layout/action_bar" android:id="@+id/navigation_bar"/>
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="80dp"
                          android:gravity="center"
                        android:orientation="horizontal">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textSize="18sp"
                              android:textColor="#999999"
                            android:text="总资产"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/total_assets"
                          android:textColor="#000000"
                          android:text=""
                          android:textSize="30sp"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="18sp"
                          android:textColor="#999999"
                          android:text="  元"/>
            </LinearLayout>
            <View android:layout_width="fill_parent"
                  android:layout_height="1dp"
                  android:background="#c1c1c1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"/>
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="0dp"
                          android:layout_weight="4"
                        android:gravity="center">
                <com.yeepbank.android.widget.PieChartView
                        android:id="@+id/pie_chart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
               <!-- <com.github.mikephil.charting.charts.PieChart
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="-20dp"
                        android:gravity="center"
                        android:id="@+id/pie_chart"/>-->
            </LinearLayout>
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="0dp"
                          android:layout_weight="3"
                          android:orientation="vertical"
                          android:paddingLeft="50dp"
                          android:gravity="center">
                    <LinearLayout android:layout_width="fill_parent"
                                  android:layout_height="0dp"
                                  android:layout_weight="1"
                                  android:gravity="left|center_vertical"
                                  android:id="@+id/free_"
                                android:orientation="horizontal">
                        <ImageView android:layout_width="wrap_content"
                                   android:layout_height="fill_parent"
                                   android:layout_marginRight="15dp"
                                android:src="@drawable/dark_blue"/>
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_marginRight="15dp"
                                android:text="可用余额:"
                                android:textColor="#999999"/>
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text=""
                                  android:id="@+id/free_balance_percent"
                                  android:visibility="gone"
                                  android:layout_marginRight="15dp"
                                  android:textColor="#333333"/>
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text=""
                                  android:id="@+id/free_balance"
                                  android:layout_marginRight="5dp"
                                  android:textColor="#333333"/>
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="元"
                                  android:textColor="#999999"/>

                    </LinearLayout>
                <LinearLayout android:layout_width="fill_parent"
                              android:layout_height="0dp"
                              android:layout_weight="1"
                              android:gravity="left|center_vertical"
                              android:orientation="horizontal">
                    <ImageView android:layout_width="wrap_content"
                               android:layout_height="fill_parent"
                               android:layout_marginRight="15dp"
                               android:src="@drawable/blue"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginRight="15dp"
                              android:text="天天盈持有额:"
                              android:textColor="#999999"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text=""
                              android:visibility="gone"
                              android:id="@+id/edm_free_balance_percent"
                              android:layout_marginRight="15dp"
                              android:textColor="#333333"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text=""
                              android:id="@+id/edm_free_balance"
                              android:layout_marginRight="5dp"
                              android:textColor="#333333"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="元"
                              android:textColor="#999999"/>

                </LinearLayout>
                <LinearLayout android:layout_width="fill_parent"
                              android:layout_height="0dp"
                              android:layout_weight="1"
                              android:gravity="left|center_vertical"
                              android:orientation="horizontal">
                    <ImageView android:layout_width="wrap_content"
                               android:layout_height="fill_parent"
                               android:layout_marginRight="15dp"
                               android:src="@drawable/yellow"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginRight="15dp"
                              android:text="定期待收本息:"
                              android:textColor="#999999"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text=""
                              android:layout_marginRight="15dp"
                              android:visibility="gone"
                              android:id="@+id/totalPIReceivable_percent"
                              android:textColor="#333333"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text=""
                              android:layout_marginRight="5dp"
                              android:id="@+id/totalPIReceivable"
                              android:textColor="#333333"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="元"
                              android:textColor="#999999"/>

                </LinearLayout>
                <LinearLayout android:layout_width="fill_parent"
                              android:layout_height="0dp"
                              android:layout_weight="1"
                              android:gravity="left|center_vertical"
                              android:orientation="horizontal">
                    <ImageView android:layout_width="wrap_content"
                               android:layout_height="fill_parent"
                               android:layout_marginRight="15dp"
                               android:src="@drawable/red"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginRight="15dp"
                              android:text="定期待结标:"
                              android:textColor="#999999"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text=""
                              android:id="@+id/waitingBiddingAmount_percent"
                              android:visibility="gone"
                              android:layout_marginRight="15dp"
                              android:textColor="#333333"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text=""
                              android:id="@+id/waitingBiddingAmount"
                              android:layout_marginRight="5dp"
                              android:textColor="#333333"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="元"
                              android:textColor="#999999"/>

                </LinearLayout>
                <LinearLayout android:layout_width="fill_parent"
                              android:layout_height="0dp"
                              android:layout_weight="1"
                              android:gravity="left|center_vertical"
                              android:orientation="horizontal">
                    <ImageView android:layout_width="wrap_content"
                               android:layout_height="fill_parent"
                               android:layout_marginRight="15dp"
                               android:src="@drawable/green"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginRight="15dp"
                              android:text="提现中:"
                              android:textColor="#999999"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text=""
                              android:id="@+id/withDrawingAmount_percent"
                              android:visibility="gone"
                              android:layout_marginRight="15dp"
                              android:textColor="#333333"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text=""
                              android:id="@+id/withDrawingAmount"
                              android:layout_marginRight="5dp"
                              android:textColor="#333333"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="元"
                              android:textColor="#999999"/>
                </LinearLayout>

            </LinearLayout>
            <TextView android:layout_width="fill_parent"
                      android:layout_height="40dp"
                      android:gravity="center"
                      android:text="*待结标金额中不包含体验券金额"
                      android:textColor="#999999"/>

</LinearLayout>