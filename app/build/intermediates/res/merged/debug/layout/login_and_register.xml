<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res/com.yeepbank.android"
                android:layout_width="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:background="#85000000"
                android:layout_height="match_parent">

            <com.yeepbank.android.widget.LoginFrame
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    app:show_width="0.9"
                    app:show_height="0.8"

                    android:id="@+id/contentView">

                    <include layout="@layout/register" android:id="@+id/register_page"/>
                    <include layout="@layout/login" android:id="@+id/login_page"/>


            </com.yeepbank.android.widget.LoginFrame>

</RelativeLayout>