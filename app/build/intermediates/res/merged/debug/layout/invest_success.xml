<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
              android:background="#ffffff"
              android:tag="投资成功">
<TextView android:layout_width="fill_parent"
          android:layout_height="100dp"
          android:text="投资成功"
          android:textSize="30dp"
          android:gravity="center"
          android:textColor="#3887BE"/>
<LinearLayout android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="horizontal">
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/expected_return_success"
              android:textSize="18sp"
              android:textColor="#ffff6c36"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="元预计收益于10日后到账"
              android:textSize="18sp"
              android:id="@+id/profit_duration"
              android:textColor="#c1c1c1"/>
</LinearLayout>



<LinearLayout android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:layout_marginTop="20dp"
              android:id="@+id/show_or_hide"
              android:visibility="gone"
              android:orientation="vertical">
    <TextView android:layout_width="wrap_content"
              android:layout_height="30dp"
              android:text="投资管理更灵活"
              android:textSize="16sp"
              android:textColor="#c1c1c1"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="30dp"
              android:text="持有3天后方可在PC端进行债券转让"
              android:textSize="16sp"
              android:textColor="#c1c1c1"/>
</LinearLayout>


<LinearLayout android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:layout_marginTop="20dp"
              android:orientation="vertical">
    <Button android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:minWidth="200dp"
            android:background="@drawable/round_bg_blue_fill_blue"
            android:text="查看账户概览"
            android:id="@+id/scan_account"
            android:textColor="#ffffff"/>
    <Button android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:minWidth="200dp"
            android:background="@drawable/round_bg_blue"
            android:text="查看更多项目"
            android:id="@+id/scan_more_project_list"
            android:textColor="#3887BE"/>
</LinearLayout>



</LinearLayout>